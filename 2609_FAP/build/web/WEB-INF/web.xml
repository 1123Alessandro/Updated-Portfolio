<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>key</param-name>
        <param-value>ics_2609ics_2609</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcClassName</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPass</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcDriverUrl</param-name>
        <param-value>jdbc:mysql</param-value>
    </context-param>
    <context-param>
        <param-name>dbHost</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>dbPort</param-name>
        <param-value>3306</param-value>
    </context-param>
    <context-param>
        <param-name>dbName</param-name>
        <param-value>ewalletdb?useSSL=false</param-value>
    </context-param>
    <servlet>
        <servlet-name>ShowExpenses</servlet-name>
        <servlet-class>controller.ShowExpenses</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddExpense</servlet-name>
        <servlet-class>controller.AddExpense</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateExpense</servlet-name>
        <servlet-class>controller.UpdateExpense</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteExpense</servlet-name>
        <servlet-class>controller.DeleteExpense</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowProfile</servlet-name>
        <servlet-class>controller.ShowProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAccount</servlet-name>
        <servlet-class>controller.UpdateAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowBudget</servlet-name>
        <servlet-class>controller.ShowBudget</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBudget</servlet-name>
        <servlet-class>controller.AddBudget</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBudget</servlet-name>
        <servlet-class>controller.DeleteBudget</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LandingPage</servlet-name>
        <servlet-class>controller.LandingPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowExpenses</servlet-name>
        <url-pattern>/ShowExpenses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddExpense</servlet-name>
        <url-pattern>/AddExpense</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateExpense</servlet-name>
        <url-pattern>/UpdateExpense</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteExpense</servlet-name>
        <url-pattern>/DeleteExpense</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowProfile</servlet-name>
        <url-pattern>/ShowProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAccount</servlet-name>
        <url-pattern>/UpdateAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowBudget</servlet-name>
        <url-pattern>/ShowBudget</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBudget</servlet-name>
        <url-pattern>/AddBudget</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBudget</servlet-name>
        <url-pattern>/DeleteBudget</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LandingPage</servlet-name>
        <url-pattern>/LandingPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>landing-page.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>403</error-code>
        <location>/expire.jsp</location>
    </error-page>
</web-app>
